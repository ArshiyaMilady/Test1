@model IEnumerable<MvcFamilyMeetings.Models.Loan>

<div class="row">
    <div class="col-md-4">
        <br />
        <br />
        @if (ViewData["DED"].ToString().Equals("SHOW"))
        {
            <form asp-action="Index" dir="ltr">
                <div class="form-group">
                    <p>
                        <input type="text" name="member_id" style="width:100px" dir="auto">
                        <label class="control-label"> شناسه </label>
                    </p>
                    <p>
                        <input type="text" name="FName" style="width:100px" dir="auto">
                        <label class="control-label"> نام </label>
                    </p>
                    <p>
                        <input type="text" name="LName" style="width:100px" dir="auto">
                        <label class="control-label"> نام خانوادگی </label>
                    </p>
                    <p>
                        <input type="submit" value="جستجو"
                               style="color: white; background-color:blue;" />
                    </p>
                    <p> @ViewData["Data"].ToString() : تعداد موارد یافت شده</p>
                </div>
            </form>
        }
    </div>
    <div class="col-md-4">
        <br />
        <br />
        <br />
        <p dir="rtl" style="color:black">@ViewData["LastLoan_amount"].ToString() </p>
        <p dir="rtl" style="color:black">@ViewData["LastLoan_date"].ToString()</p>
    </div>

    <div class="col-md-4">
        <h4 dir="rtl" style="color:darkred">@ViewData["Member_Name"].ToString()</h4>
        <h2 dir="rtl">وام و اقساط پرداخت شده</h2>
        @*<p dir="rtl">موجودی : @ViewData["Cash"] ریال</p>*@

        @if (ViewData["DED"].ToString().Equals("SHOW"))
        {
            <p dir="rtl">
                <a asp-action="Create">اضافه کردن مورد جدید</a>
            </p>
        }
    </div>
</div>

<button dir="rtl" style="color:darkblue; "
        onclick="location.href='@Url.Action("Loan_History", "Loans")'">
    لیست وامهای دریافت شده
</button>

<table class="table" dir="rtl">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Member_Id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remaining)
            </th>
            @*
                 <th>
                     @Html.DisplayNameFor(model => model.Loan_Amount)
                 </th>
                 <th>
                     @Html.DisplayNameFor(model => model.Comment)
                 </th>
                <th>
                         @Html.DisplayNameFor(model => model.I_C1)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.I_C2)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.I_I1)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.I_I2)
                     </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Member_Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remaining)
                </td>
                @*
                     <td>
                         @Html.DisplayFor(modelItem => item.Loan_Amount)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Comment)
                     </td>
                    <td>
                             @Html.DisplayFor(modelItem => item.I_C1)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.I_C2)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.I_I1)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.I_I2)
                         </td>*@
                @if (ViewData["DED"].ToString().Equals("SHOW"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>


<style type="text/css">
    .table th, .table td {
        text-align: center;
    }
</style>

