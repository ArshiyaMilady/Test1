@model IEnumerable<MvcFamilyMeetings.Models.Member>

@{
    ViewData["Title"] = "View";
}



<style type="text/css">
    .inputClass {
        font-weight: bold;
    }
</style>

<div class="row">
    <div class="col-md-4">
    </div>

    <div class="col-md-4">
        <h2 dir="rtl">ورود به سایت</h2>

        <hr />

        <form asp-action="Index" dir="rtl">
            <div class="form-group">
                <label class="control-label">نام کاربری</label>
                <input type="text" name="sLoginName" class="form-control" dir="auto">
                @*<input name="LoginName" class="form-control" dir="auto" />*@
                <br>
                <label class="control-label">رمز ورود</label>
                <input type="password" name="sPassword" class="form-control" dir="auto">
                @*<input name="Password" class="form-control" dir="auto" />*@
            </div>

            <div class="form-group" dir="ltr">
                <input type="submit" value="ورود" class="btn btn-default"
                       style="font-family: sans-serif; font-size: 25px;
                   color: white; background-color:darkslategrey;" />
                <p dir="rtl" style="color:red">@ViewBag.Message</p>
            </div>
        </form>
    </div>
</div>

